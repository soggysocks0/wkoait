<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    tools:context=".MainActivity">


    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cameraControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Camera Controls -->
    <FrameLayout
        android:id="@+id/cameraControls"
        android:layout_width="0dp"
        android:layout_height="145dp"
        android:background="@drawable/rounded_controls_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Gallery Preview -->
        <ImageButton
            android:id="@+id/galleryButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="24dp"
            android:background="@drawable/rounded_gallery_button"
            android:scaleType="centerCrop"
            android:contentDescription="Open gallery"/>

        <!-- Camera Button -->
        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/round_camera_button"
            android:scaleType="centerInside"
            app:srcCompat="@android:drawable/ic_menu_camera" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
